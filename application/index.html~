<script>
	$("#newdir").click(function(){
		var newdir = $("input[name=newdir]").val();
		$.post("",{newdir: newdir},function(msg){
			if(msg==1) $("label").show();
			if(msg==2) location.reload();
		});
	});

	$("input[name=newdir]").focus(function(){
		$("label").hide();
	});

	function delDir(id){
		$.post("",{del_id: id},function(msg){
			if(msg==1) location.reload();
		});
	}
</script>
